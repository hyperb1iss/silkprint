---
source: tests/snapshots.rs
expression: typst
---
#set page(
  paper: "a4",
  margin: (top: 25mm, bottom: 30mm, left: 20mm, right: 20mm),
  fill: rgb("#faf8ff"),
  numbering: "1",
  number-align: center + bottom,
)

#set raw(theme: "/__silkprint_theme.tmTheme")

#set text(
  font: ("JetBrains Mono", "JetBrains Mono", "Fira Code", "SF Mono", "Cascadia Code"),
  size: 9pt,
  fill: rgb("#2b2540"),
  lang: "en",
  hyphenate: true,
  ligatures: true,
)

#set par(
  justify: true,
  leading: 0.35em,
  spacing: 0.6em,
)

#show heading.where(level: 1): it => {
  v(20pt)
  block(below: 8pt)[
    #set text(font: "Inter", size: 16pt, weight: 700, fill: rgb("#1565c0"), tracking: -0.015em)
    #set par(leading: 0.10em)
    #show raw.where(block: false): r => r
    #it.body
  ]
  line(length: 100%, stroke: 0.5pt + rgb("#d8d0ea"))
}

#show heading.where(level: 2): it => {
  v(16pt)
  block(below: 5pt)[
    #set text(font: "Inter", size: 13pt, weight: 600, fill: rgb("#1565c0"), tracking: -0.015em)
    #set par(leading: 0.15em)
    #show raw.where(block: false): r => r
    #it.body
  ]
  line(length: 100%, stroke: 0.5pt + rgb("#d8d0ea"))
}

#show heading.where(level: 3): it => {
  v(14pt)
  block(below: 4pt)[
    #set text(font: "Inter", size: 11pt, weight: 600, fill: rgb("#1565c0"), tracking: -0.015em)
    #set par(leading: 0.20em)
    #show raw.where(block: false): r => r
    #it.body
  ]
}

#show heading.where(level: 4): it => {
  v(12pt)
  block(below: 3pt)[
    #set text(font: "Inter", size: 10pt, weight: 500, fill: rgb("#1565c0"), tracking: -0.015em)
    #set par(leading: 0.20em)
    #show raw.where(block: false): r => r
    #it.body
  ]
}

#show heading.where(level: 5): it => {
  v(10pt)
  block(below: 2pt)[
    #set text(font: "Inter", size: 9pt, weight: 500, fill: rgb("#1565c0"), tracking: -0.015em)
    #set par(leading: 0.25em)
    #show raw.where(block: false): r => r
    #it.body
  ]
}

#show heading.where(level: 6): it => {
  v(10pt)
  block(below: 2pt)[
    #set text(font: "Inter", size: 8.5pt, weight: 600, fill: rgb("#1565c0"), tracking: 0.05em)
    #set par(leading: 0.25em)
    #show raw.where(block: false): r => r
    #upper(it.body)
  ]
}

#show raw.where(block: true): it => {
  block(
    fill: rgb("#f1ecff"),
    stroke: 0.5pt + rgb("#d8d0ea"),
    radius: 6pt,
    inset: (x: 14pt, y: 12pt),
    width: 100%,
    breakable: true,
  )[
    #set text(font: "JetBrains Mono", size: 8.5pt, ligatures: false)
    #set par(justify: false, leading: 0.45em)
    #it
  ]
}

#show raw.where(block: false): it => {
  box(
    fill: rgb("#f1ecff"),
    stroke: 0.5pt + rgb("#d8d0ea"),
    radius: 3pt,
    inset: (x: 3pt, y: 1.5pt),
  )[
    #set text(font: "JetBrains Mono", size: 8.5pt, ligatures: false)
    #it
  ]
}

#show link: it => {
  set text(fill: rgb("#1565c0"), ligatures: false)
  underline(it)
}

#show quote.where(block: true): it => {
  block(
    stroke: (left: 2.5pt + rgb("#a82890")),
    inset: (left: 14pt, y: 8pt, right: 8pt),
    width: 100%,
  )[
    #set text(fill: rgb("#544c6e"))
    #emph(it.body)
  ]
}

#set table(
  stroke: (x: none, y: 0.5pt + rgb("#d8d0ea")),
  inset: (x: 8pt, y: 5pt),
  fill: (_, y) => if y > 0 and calc.even(y) { rgb("#e8e2f5") },
)
#show table: set text(size: 7.5pt)
#show table.cell.where(y: 0): set text(font: "Inter", weight: 600, fill: rgb("#ffffff"))
#show table.cell.where(y: 0): set table.cell(fill: rgb("#1565c0"), stroke: (bottom: 1.5pt + rgb("#1565c0")))

#show footnote.entry: it => {
  line(length: 33%, stroke: 0.5pt + rgb("#d8d0ea"))
  v(4pt)
  set text(size: 9pt)
  [#text(fill: rgb("#1565c0"))[#it.note.counter.display()] #it.note.body]
}



